<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/jquery.tinymce.min.js" referrerpolicy="origin"></script> 
<div class="container">
	<hr>
	<div class="card">
		<div class="card-header">
			<h2>Edit article</h2>
		</div>
		<div class="card-body">
			<form method="POST" action="/articles/update">
				<input type="hidden" value="<%= article.id %>" name="id"></input>
		    	<input class="form-control" type="text" name="title" placeholder="define article's title" value="<%= article.title %>"><br>
		    	<textarea class="form-control" placeholder="Edit your article here" name="body" id="article" ><%= article.body%></textarea>
		    	<br>
				<label>Category:</label>
		    	<select name="category" class="form-control">
		    		<% categories.forEach((category) => { %> 
		    			<% if(category.id == article.categoryId) { %>
		    				<option value="<%= category.id  %>" selected><%= category.title  %></option>
		    			<% }else { %>
		    				<option value="<%= category.id  %>"><%= category.title  %></option>
		    			<% } %>
		    			
		    		<% }) %>
		    	</select>
		    	<br>
		    	<button class="btn btn-dark">Save</button>
	    	</form>
		</div>
	    
	</div>
</div>

<%- include ('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script> 

<script>
	
	tinymce.init({
		//language: 'ja',
		selector: '#article',
		plugins: [
			'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
		]
	})

</script>