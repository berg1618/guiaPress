<%- include ('partials/header') %>
<%- include ('partials/homenavbar') %>

<body>
	<div class="container">
		<hr>
		<div class="jumbotron">
		  <h1 class="display-4">Welcome!</h1>
		  <p class="lead">This is a simple blog project</p>
		  <hr class="my-4">
		  <p>It contains pages and categories, with specific pages to create elements to the previous groups</p>
		  <p class="lead">
		    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
		  </p>
		</div>
		<hr>
		<% articles.forEach(article => { %>
				<div class="card">
					<div class="card-header">
						<h2><%= article.title %></h2>
					</div>
					<div class="card-body">
						<a href="/<%= article.slug %>" class="btn btn-dark">Read article</a>
					</div>
				</div>
				<br>
		<% }) %>
	</div>
</body>
<%- include ('partials/footer') %>